@model cansaraciye_ecommerce.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<h2>Ürün Düzenle</h2>

<form asp-controller="Admin" asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Id" /> <!-- ✅ Güncelleme için ID gerekiyor -->
    <div class="form-group">
        <label>Ürün Adı</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Stok</label>
        <input asp-for="Stock" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Ürün Görsel URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"
            class="form-control">
            <option value="">Kategori Seçin</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

<a class="btn btn-secondary" asp-controller="Admin" asp-action="ProductList">Geri</a>
