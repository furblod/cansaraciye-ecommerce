@model cansaraciye_ecommerce.Models.Category

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body px-4 py-5">
            <h3 class="fw-bold mb-4 text-center">üìÅ Yeni Kategori Ekle</h3>

            <form asp-controller="Admin" asp-action="CreateCategory" method="post">
                <div class="mb-3">
                    <label class="form-label">Kategori Adƒ±</label>
                    <input asp-for="Name" class="form-control" required />
