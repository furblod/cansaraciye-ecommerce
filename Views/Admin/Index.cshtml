@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body text-center py-5">
            <h2 class="fw-bold mb-4">Admin Paneline Hoş Geldiniz!</h2>
            <p class="text-muted mb-4">Lütfen yapmak istediğiniz işlemi seçin.</p>

            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a class="btn btn-outline-primary px-4 py-2" asp-controller="Admin" asp-action="CategoryList">
                    <i class="bi bi-folder2-open me-2"></i>Kategori Yönetimi
                </a>
                <a class="btn btn-outline-success px-4 py-2" asp-controller="Admin" asp-action="ProductList">
                    <i class="bi bi-box-seam me-2"></i>Ürün Yönetimi
                </a>
                <a class="btn btn-outline-dark px-4 py-2" asp-action="Orders">
                    <i class="bi bi-clipboard-data me-2"></i>Sipariş Yönetimi
                </a>
                <a class="btn btn-outline-dark px-4 py-2" asp-controller="Admin" asp-action="WholesaleRequests">
                    <i class="bi bi-clipboard-data me-2"></i>Toptan Sipariş Yönetimi
                </a>
            </div>
        </div>
    </div>
</div>
