@{
    string pageDescription = ViewData["MetaDescription"] as string ?? "Yerli üretim çantalarımızla toptan ve perakende satışta hizmetinizdeyiz.";
    string pageTitle = ViewData["Title"] as string ?? "Cansaraciye - Çanta Üretim ve Satış";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cansaraciye_ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cansaraciye_ecommerce.styles.css" asp-append-version="true" />
    <script src="~/js/site.js"></script>
    <meta name="description" content="@pageDescription">
    <meta property="og:title" content="@pageTitle">
    <meta property="og:description" content="@pageDescription">
    <meta property="og:image" content="/images/about-us.jpg">

</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            <i class="bi bi-bag-check-fill"></i> Cansaraciye
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> Yönetim
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> Ana Sayfa
                        </a>
                    }
                </li>
                @* <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-lock-fill"></i> Gizlilik
                    </a>
                </li> *@
                <li class="nav-item">
                    <a class="nav-link position-relative" asp-controller="ShoppingCart" asp-action="Index">
    <i class="bi bi-cart-fill"></i> Sepetim
    @await Html.PartialAsync("_CartCountPartial")
</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" role="button" data-bs-toggle="collapse" href="#filterPanel"
                       aria-expanded="false" aria-controls="filterPanel">
                        <i class="bi bi-funnel-fill"></i> Filtrele
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Orders" asp-controller="Order">
                            <i class="bi bi-box-seam"></i> Siparişlerim
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-controller="About" asp-action="Index">
                        <i class="bi bi-info-circle-fill"></i> Hakkımızda
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Contact" asp-action="Index">
                        <i class="bi bi-envelope-fill"></i> İletişim
                    </a>
                </li>
            </ul>

            <!-- Giriş/Kayıt kısmı -->
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>

    </header>
    <main class="flex-grow-1">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-light pt-4 pb-3 mt-5 border-top shadow-sm">
    <div class="container">
        <div class="row">
            <!-- Firma Açıklama -->
            <div class="col-md-3 mb-3">
                <h5 class="fw-bold">Cansaraciye</h5>
                <p style="font-size: 0.9rem;">
                    Sırt çantası, valiz ve kurye çantası imalatında öncü firmayız. Hem perakende hem toptan satış yapıyoruz. Kalite ve müşteri memnuniyeti önceliğimizdir.
                </p>
            </div>

            <!-- Hızlı Bağlantılar -->
            <div class="col-md-3 mb-3">
                <h6 class="fw-bold">Hızlı Bağlantılar</h6>
                <ul class="list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-light">Ana Sayfa</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-light">Gizlilik Politikası</a></li>
                    <li><a asp-controller="Contact" asp-action="Index" class="text-decoration-none text-light">İletişim</a></li>
                    <li><a asp-controller="About" asp-action="Index" class="text-decoration-none text-light">Hakkımızda</a></li>
                </ul>
            </div>

            <!-- İletişim -->
            <div class="col-md-3 mb-3">
                <h6 class="fw-bold">İletişim</h6>
                <p style="font-size: 0.9rem;">
                    📍 İstanbul, Türkiye<br />
                    📞 +90 555 123 45 67<br />
                    ✉️ info@cansaraciye.com
                </p>
            </div>

            <!-- Sosyal Medya -->
            <div class="col-md-3 mb-3">
                <h6 class="fw-bold">Sosyal Medya</h6>
                <div class="d-flex flex-column gap-2">
                    <a href="https://facebook.com" class="btn btn-outline-light btn-sm text-start" target="_blank">
                        <i class="bi bi-facebook me-2"></i> Facebook
                    </a>
                    <a href="https://instagram.com" class="btn btn-outline-light btn-sm text-start" target="_blank">
                        <i class="bi bi-instagram me-2"></i> Instagram
                    </a>
                    <a href="https://linkedin.com" class="btn btn-outline-light btn-sm text-start" target="_blank">
                        <i class="bi bi-linkedin me-2"></i> LinkedIn
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center pt-3 border-top mt-3" style="font-size: 0.85rem;">
            &copy; 2025 Cansaraciye - Tüm hakları saklıdır.
        </div>
    </div>
</footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
