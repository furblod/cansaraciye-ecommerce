@model cansaraciye_ecommerce.Models.Product

@{
    ViewData["Title"] = "√úr√ºn D√ºzenle";
}

<div class="container py-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body px-4 py-5">
            <h3 class="fw-bold mb-4 text-center">üõ†Ô∏è √úr√ºn D√ºzenle</h3>

            <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">√úr√ºn Adƒ±</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">A√ßƒ±klama</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Fiyat</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Stok</label>
                        <input asp-for="Stock" type="number" min="0" class="form-control" required />
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <label class="form-label d-block">Mevcut Ana G√∂rsel</label>
                        <div class="position-relative d-inline-block">
                            <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 120px;" />
                            <a asp-action="DeleteMainImage" asp-controller="Admin" asp-route-productId="@Model.Id"
                                onclick="return confirm('Ana g√∂rsel silinsin mi?')"
                                class="btn btn-sm btn-danger rounded-circle px-2 py-1 position-absolute"
                                style="top: -6px; right: -6px; z-index:5;">√ó</a>
                        </div>
                    </div>
                }
                <!-- Video √ñnizleme -->
                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                {
                    <div class="mb-3">
                        <label class="form-label">Y√ºkl√º Video:</label><br />
                        <video width="100%" height="300" controls>
                            <source src="@Model.VideoUrl" type="video/mp4" />
                            Tarayƒ±cƒ±nƒ±z video etiketini desteklemiyor.
                        </video>
                        <br />
                        <a asp-action="DeleteProductVideo" asp-route-productId="@Model.Id"
                            class="btn btn-sm btn-danger mt-2">
                            Videoyu Sil
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted">Hen√ºz video y√ºklenmemi≈ü.</p>
                }

                <!-- Yeni Video Y√ºkle -->
                <div class="mb-3">
                    <label class="form-label">Yeni Tanƒ±tƒ±m Videosu</label>
                    <input type="file" name="ProductVideo" class="form-control" accept="video/mp4,video/webm" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Yeni Ana G√∂rsel (deƒüi≈ütirmek istersen)</label>
                    <input type="file" name="MainImage" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Yeni Ekstra G√∂rseller</label>
                    <input type="file" name="ExtraImages" class="form-control" multiple />
                </div>

                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    <label class="form-label">Mevcut Ekstra G√∂rseller</label>
                    <div class="d-flex gap-2 flex-wrap mb-3">
                        @foreach (var img in Model.ProductImages)
                        {
                            <div class="position-relative" style="width: 80px;">
                                <img src="@img.ImageUrl" class="img-thumbnail" style="width: 100%;" />
                                <a asp-action="DeleteProductImage" asp-controller="Admin" asp-route-id="@img.Id"
                                    onclick="return confirm('Bu g√∂rsel silinsin mi?')"
                                    class="btn btn-sm btn-danger rounded-circle px-2 py-1 position-absolute"
                                    style="top: -6px; right: -6px; z-index:5;">√ó</a>
                            </div>
                        }
                    </div>
                }

                <div class="mb-4">
                    <label class="form-label">Kategori</label>
                    <select asp-for="CategoryId"
                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId))"
                        class="form-select" required>
                        <option value="">Kategori Se√ßin</option>
                    </select>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark px-4">Kaydet</button>
                    <a asp-action="ProductList" class="btn btn-outline-secondary">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>
