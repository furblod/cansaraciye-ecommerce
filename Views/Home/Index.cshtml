@model List<cansaraciye_ecommerce.Models.Product>

<h2>Ürünler</h2>

@if (!Model.Any())
{
    <p>Henüz ürün eklenmemiş.</p>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Fiyat: </strong>@product.Price.ToString("C")</p>
                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.Id"
                            class="btn btn-primary">Detayları Gör</a>
                        <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@product.Id"
                            class="btn btn-success">Sepete Ekle</a>

                    </div>
                </div>
            </div>
        }
    </div>
}
