@page
@model EmailModel
@{
    ViewData["Title"] = "E-posta";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3">E-posta Yönetimi</h4>

                    <form id="email-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Mevcut E-posta</label>
                            <input asp-for="Email" class="form-control" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewEmail" class="form-label">Yeni E-posta</label>
                            <input asp-for="Input.NewEmail" class="form-control" />
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">E-postayı Güncelle</button>
                    </form>

                    <hr class="my-4" />

                    <form method="post" asp-page-handler="SendVerificationEmail">
                        <button type="submit" class="btn btn-outline-secondary w-100">Doğrulama Maili Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
