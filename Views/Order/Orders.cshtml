@model List<cansaraciye_ecommerce.Models.Order>

<h2>Siparişlerim</h2>

@if (!Model.Any())
{
    <p>Henüz hiç siparişiniz bulunmamaktadır.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sipariş ID</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>Toplam Tutar</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.Status</td>
                    <td>@order.OrderItems.Sum(oi => oi.TotalPrice) ₺</td>
                    <td>
                        <a asp-action="OrderDetails" asp-controller="Order" asp-route-id="@order.Id"
                            class="btn btn-info">Detayları Gör</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
