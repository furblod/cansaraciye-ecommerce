@model cansaraciye_ecommerce.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Ödeme Sayfası";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-5">
                    <h3 class="mb-4 fw-bold text-center">Ödeme Bilgileri</h3>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form method="post" action="/ShoppingCart/CheckoutProcess">
                        <div class="mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input type="text" name="FullName" class="form-control" value="@Model.FullName" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tam Adres</label>
                            <input type="text" name="Address" class="form-control" value="@Model.Address" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şehir</label>
                            <input type="text" name="City" class="form-control" value="@Model.City" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">İlçe</label>
                            <input type="text" name="District" class="form-control" value="@Model.District" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mahalle</label>
                            <input type="text" name="Neighborhood" class="form-control" value="@Model.Neighborhood"
                                required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sokak</label>
                            <input type="text" name="Street" class="form-control" value="@Model.Street" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bina No</label>
                            <input type="text" name="BuildingNo" class="form-control" value="@Model.BuildingNo"
                                required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Daire No</label>
                            <input type="text" name="ApartmentNo" class="form-control" value="@Model.ApartmentNo"
                                required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Telefon</label>
                            <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber"
                                required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Toplam Tutar (TL)</label>
                            <input type="text" name="TotalAmount" class="form-control bg-light fw-bold"
                                value="@(Model.TotalAmount > 0 ? Model.TotalAmount.ToString("F2") : "HATA")" readonly
                                required />
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Kart Bilgileri</h5>

                        <div class="mb-3">
                            <label class="form-label">Kart Numarası</label>
                            <input type="text" name="CardNumber" class="form-control" required />
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label">Son Kullanma Ay (AA)</label>
                                <input type="text" name="ExpireMonth" class="form-control" placeholder="AA" required />
                            </div>
                            <div class="col">
                                <label class="form-label">Son Kullanma Yıl (YYYY)</label>
                                <input type="text" name="ExpireYear" class="form-control" placeholder="YYYY" required />
                            </div>
                            <div class="col">
                                <label class="form-label">CVC</label>
                                <input type="text" name="CVC" class="form-control" required />
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-dark py-2 fw-semibold">Ödemeyi Tamamla</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>