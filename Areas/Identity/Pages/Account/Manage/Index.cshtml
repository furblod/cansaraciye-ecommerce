@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3">Profil Bilgileri</h4>

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form id="profile-form" method="post">
                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label">Ad</label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label">Soyad</label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Telefon</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label">Tam Adres</label>
                            <textarea asp-for="Input.Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.City" class="form-label">İl</label>
                            <input asp-for="Input.City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.District" class="form-label">İlçe</label>
                            <input asp-for="Input.District" class="form-control" />
                            <span asp-validation-for="Input.District" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Neighborhood" class="form-label">Mahalle</label>
                            <input asp-for="Input.Neighborhood" class="form-control" />
                            <span asp-validation-for="Input.Neighborhood" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Street" class="form-label">Sokak</label>
                            <input asp-for="Input.Street" class="form-control" />
                            <span asp-validation-for="Input.Street" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.BuildingNo" class="form-label">Bina No</label>
                            <input asp-for="Input.BuildingNo" class="form-control" />
                            <span asp-validation-for="Input.BuildingNo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ApartmentNo" class="form-label">Daire No</label>
                            <input asp-for="Input.ApartmentNo" class="form-control" />
                            <span asp-validation-for="Input.ApartmentNo" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}